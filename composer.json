{
    "name": "vdhicts/laravel-validation-rules",
    "description": "Collection of validation rules for Laravel.",
    "keywords": [
        "vdhicts",
        "validation",
        "rules",
        "laravel"
    ],
    "homepage": "https://github.com/vdhicts/laravel-validation-rules",
    "license": "MIT",
    "authors": [
        {
            "name": "Dick van der Heiden",
            "email": "info@vdhicts.nl",
            "homepage": "https://www.vdhicts.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/support": "^10.0",
        "laravel/pint": "^1.7",
        "spatie/regex": "^3.1"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Vdhicts\\ValidationRules\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vdhicts\\ValidationRules\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vdhicts\\ValidationRules\\ValidationRulesServiceProvider"
            ]
        }
    }
}
